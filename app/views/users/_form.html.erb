<%= render 'shared/errors', obj: @user %>

  <div class="container form-con">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus:true %>
        </div>
      </div>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true  %>
          </div>
        </div>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus:true  %>
          </div>
        </div>
      <div class="form-group row">
        <!-- look into button size/movement -->
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class:'btn btn-primary btn-large') %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="col-sm-4 offset-sm-4">
      [<%= link_to 'Cancel request and return to articles listing', articles_path %>]
    </div>
