<% if @article.errors.any? %>
  <h4>The following errors prevented the article from being created</h4>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>





    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus:true %>
        </div>
      </div>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows:10, class: "form-control", placeholder: "Body of article", autofocus:true  %>
          </div>
        </div>
      <div class="form-group row">
        <!-- look into button size/movement -->
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit class:'btn btn-primary btn-large' %>
        </div>
      </div>

    <% end %>
    <div class="col-sm-4 offset-sm-4">
      [<%= link_to 'Cancel request and return to articles listing', articles_path %>]
    </div>
